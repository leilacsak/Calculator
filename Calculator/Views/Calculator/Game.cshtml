@model CalculatorModel
@using Microsoft.AspNetCore.Mvc.Rendering
@using (Html.BeginForm("Calculate", "CalculatorController", FormMethod.Post))
{
    @Html.ValidationSummary(true)
        <p>Enter numbers into the fields, select an operator from the list, then click the Calculate button for the result:</p>
        <div class="row">
            <div class="row">
                <div class="col-md-4">
                    @Html.LabelFor(model => model.Operandus1)
                    @Html.TextBoxFor(model => model.Operandus1)
                    @Html.ValidationMessageFor(model => model.Operandus1)
                </div>
                <div class="col-md-4">
                    @Html.LabelFor(model => model.Operandus2)
                    @Html.TextBoxFor(model => model.Operandus2)
                    @Html.ValidationMessageFor(model => model.Operandus2)
                </div>
                <div class ="col-md-4">
                    @Html.LabelFor(model => model.Operator)
                    @Html.DropDownListFor(model => model.Operator, new SelectList(new[] { "+", "-", "*", "/" }))
                    @Html.ValidationMessageFor(model => model.Operator)
                </div>
            </div>
        </div>
    <div class="row mt-3">
        <div class="col-md-12 text-center">
            <input type="submit" value="Calculate" class="btn btn-primary" />
        </div>
    </div>

    if (Model != null)
    {
        <div class="row mt-3">
            <div class="col-md-12 text-center">
                <label for="result">Result:</label>
                <input type="text" id="result" name="result" value="@Model.Result" disabled class="form-control" />
            </div>
        </div>
    }   
}